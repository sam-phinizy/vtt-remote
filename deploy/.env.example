# VTT Remote - Environment Configuration
# Copy to .env and edit values, or run: uv run scripts/setup-env.py

# Domain for the relay server SSL certificate (used with Traefik)
VTT_DOMAIN=vtt-remote.example.com

# Domain for documentation site
DOCS_DOMAIN=docs.example.com

# Email for Let's Encrypt notifications
ACME_EMAIL=admin@example.com

# Deployment target (user@host)
DEPLOY_HOST=root@your-server.example.com

# Remote path for deployment
DEPLOY_PATH=/opt/vtt-remote
